<div class="container">
  <div class="row">
    <% ["Lisbon", "Paris", "Berlin"].each do |city| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path "https://kitt.lewagon.com/placeholder/cities/#{city}" %>);">
          <div class="card-category">Popular</div>
          <div class="card-description">
            <h2>Le Wagon <%= city %></h2>
            <p>Very cool city, the best</p>
          </div>
          <img class="card-user" src="https://avatars3.githubusercontent.com/u/32457866?v=4">
          <a class="card-link" href="#" ></a>
         </div>
      </div>
    <% end %>
  </div>
</div>
